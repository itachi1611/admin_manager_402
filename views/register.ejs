<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <title>Document</title>
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="../assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/vendor/animate-css/animate.min.css">
    <link rel="stylesheet" href="../assets/vendor/font-awesome/css/font-awesome.min.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="../assets/css/main.css">
    <link rel="stylesheet" href="../assets/css/color_skins.css">
</head>

<body class="theme-blue">
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle auth-main">
                <div class="auth-box">
                    <div class="mobile-logo"><a href="/login"><img src="../assets/images/logo-icon.svg"
                                alt="Mplify"></a></div>
                    <div class="auth-left">
                        <div class="left-top">
                            <a href="/login">
                                <img src="../assets/images/logo-icon.svg" alt="Mplify">
                                <span>Mplify</span>
                            </a>
                        </div>
                        <div class="left-slider">
                            <img src="../assets/images/login/1.jpg" class="img-fluid" alt="">
                        </div>
                    </div>

                    <div class="auth-right">
                        <div class="right-top">
                            <ul class="list-unstyled clearfix d-flex">
                                <li><a href="/login"><i class="fa fa-home"></i></a></li>
                                <li><a href="javascript:void(0);">Help</a></li>
                                <li><a href="javascript:void(0);">Contact</a></li>
                            </ul>
                        </div>

                        <div class="card">
                            <div class="header">
                                <p class="lead">Create an account</p>
                            </div>
                            <div class="body">
                                <form class="form-auth-small" action="/register" method="POST">
                                    <div class="form-group">
                                        <label for="signup-email" class="control-label sr-only">Email</label>
                                        <input type="email" class="form-control" id="signup-email" name="email" required="required" placeholder="Your email"
                                        oninvalid="this.setCustomValidity('Please input email !')" oninput="this.setCustomValidity('')">
                                    </div>
                                    <div class="form-group">
                                        <label for="signup-password" class="control-label sr-only">Password</label>
                                        <input type="password" class="form-control" id="signup-password" name="password"
                                            required="required" placeholder="Password"
                                            oninvalid="this.setCustomValidity('Please input password !')"
                                            oninput="this.setCustomValidity('')"
                                            pattern="[A-Za-z0-9_@]{5,16}">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">REGISTER</button>
                                    <div class="bottom">
                                        <span class="helper-text">Already have an account? <a
                                                href="/login">Login</a></span>
                                    </div>
                                </form>
                                <div class="separator-linethrough"><span>OR</span></div>
                                <button class="btn btn-signin-social"><i
                                        class="fa fa-facebook-official facebook-color"></i> Sign in with
                                    Facebook</button>
                                <button class="btn btn-signin-social"><i class="fa fa-twitter twitter-color"></i> Sign
                                    in with Twitter</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>

</html>